\RequirePackage{anyfontsize}
\RequirePackage{fontspec}
	\setmainfont{Exo2-Light.ttf}[
		BoldFont = Exo2-Medium.ttf,
		ItalicFont = Exo2-LightItalic.ttf,
		BoldItalicFont = Exo2-MediumItalic.ttf
	]
	
	\newfontfamily{\enumeratefont}{Exo2-Light.ttf}[
		BoldFont = Exo2-Medium.ttf, 
		ItalicFont = Exo2-LightItalic.ttf, 
		BoldItalicFont = Exo2-MediumItalic.ttf
	]
	\newfontfamily{\boxtitlefont}{Exo2-Bold.ttf}[
		BoldFont = Exo2-ExtraBold.ttf, 
		ItalicFont = Exo2-BoldItalic.ttf, 
		BoldItalicFont = Exo2-ExtraBoldItalic.ttf
	]
	\newfontfamily{\boxexample}{Exo2-Regular.ttf}[
		BoldFont = Exo2-SemiBold.ttf, 
		ItalicFont = Exo2-RegularItalic.ttf, 
		BoldItalicFont = Exo2-MediumItalic.ttf
	]

	\newfontfamily{\titlefont}{orbitron-medium.otf}[
		BoldFont = orbitron-bold.otf
	]
	\newfontfamily{\secondtitlefont}{orbitron-black.ttf}
	\newfontfamily{\thirdtitlefont}{orbitron-bold.otf}
	\newfontfamily{\pagetitlefont}{Orbitron-Regular.ttf}
	\newfontfamily{\boxfont}{Roboto-Regular.ttf}
