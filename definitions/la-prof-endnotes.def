\makepagenote

% Redefine as configurações da página de notas para sair do paracol e passar a utilizar multicols
\renewcommand*{\notedivision}{
	\clearpage
	\iftoggle{paracol}{
		\end{paracol}
		\togglefalse{paracol}
	}{}
	\section*{\notesname}
	\begin{multicols}{2}
}

%Termina o multicols da página de notas.
\apptocmd{\printpagenotes}{\clearpage\end{multicols}}{}{}



\renewcommand*{\pagenotesubhead}[3]{}


\newcommand{\la@prof@endtitle}[2]{
	{
		\color{\currentcolor}\bfseries
		{\fontsize{14pt}{0pt}\selectfont #1}\par
		\vspace{-.8\baselineskip}	
		\rule{\linewidth}{3pt}
		{\Large #2}
	}
}


\newcommand{\objectives@endnote}[2]{
	\leavevmode\pagenote{
		{
			\la@prof@endtitle{as}{as}
			\color{\currentcolor}\bfseries
			{\fontsize{14pt}{0pt}\selectfont Objetivos específicos}\par
			\vspace{-.8\baselineskip}	
			\rule{\linewidth}{3pt}
			{\Large #1}
		}

		#2
	}
}


\newcommand{\la@prof@note}[3]{
		\leavevmode\pagenote{
		{
			\color{\currentcolor}\bfseries
			{\fontsize{14pt}{0pt}\selectfont #1}\par
			\vspace{-.8\baselineskip}	
			\rule{\linewidth}{3pt}
			{\Large #2}
		}	
		#3
	}
}

\newcommand{\teachernotes}[3][]{
	\IfStrEqCase{#1}{%
		{}{
			\la@prof@note{#2}{}{#3}
		}
		{objectives}{
			\la@prof@note{Objetivos específicos}{#2}{#3}				
		}%
		{sugestions}{
			\la@prof@note{Sugestões e discussões}{#2}{#3}			
		}%
		{answer}{%
			\la@prof@note{Solução}{#2}{#3}			
		}%
	}
}